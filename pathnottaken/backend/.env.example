# OpenAI API Key (optional — built-in recommendations work without it)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret — REQUIRED in production (must be a strong random string)
JWT_SECRET=dev-secret-change-me

# Frontend URL (for CORS — comma-separated for multiple origins)
FRONTEND_URL=http://localhost:3000

# Database — leave blank for SQLite (local dev), set for PostgreSQL (production)
# Example: postgres://user:password@host:5432/pathnotaken
DATABASE_URL=
