# OpenAI API Key (optional — built-in recommendations work without it)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace API Key (free alternative to OpenAI — used when OPENAI_API_KEY is not set)
HUGGINGFACE_API_KEY=your_huggingface_token_here

# HuggingFace model (optional — defaults to mistralai/Mistral-7B-Instruct-v0.3)
# Other good free options: google/flan-t5-xxl, bigscience/bloomz-1b1
HF_MODEL=mistralai/Mistral-7B-Instruct-v0.3

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret — REQUIRED in production (must be a strong random string)
JWT_SECRET=dev-secret-change-me

# Frontend URL (for CORS — comma-separated for multiple origins)
FRONTEND_URL=http://localhost:3000

# Database — leave blank for SQLite (local dev), set for PostgreSQL (production)
# Example: postgres://user:password@host:5432/pathnotaken
DATABASE_URL=
